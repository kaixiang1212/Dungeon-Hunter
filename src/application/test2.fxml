<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane onKeyPressed="#playerMovement" prefHeight="821.0" prefWidth="1115.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <Pane fx:id="mainPane" prefHeight="621.0" prefWidth="792.0" BorderPane.alignment="CENTER" />
   </center>
   <left>
      <VBox alignment="CENTER" prefHeight="621.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Label prefHeight="23.0" prefWidth="197.0" text="Current Item:" textFill="RED">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Label fx:id="promptLabel" prefHeight="17.0" prefWidth="219.0" text="None" textFill="RED">
               <font>
                  <Font name="Yu Gothic Medium" size="14.0" />
               </font>
            </Label>
            <Label prefHeight="26.0" prefWidth="200.0" text="Inventory Consists Of:" textFill="RED">
               <font>
                  <Font name="Yu Gothic Medium" size="18.0" />
               </font>
            </Label>
            <Label fx:id="inventoryContents" alignment="TOP_LEFT" prefHeight="61.0" prefWidth="197.0" text="None" textFill="RED">
               <font>
                  <Font name="Yu Gothic Medium" size="14.0" />
               </font>
            </Label>
         </children>
      </VBox>
   </left>
   <right>
      <VBox alignment="CENTER" prefHeight="621.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </right>
   <top>
      <HBox prefHeight="88.0" prefWidth="200.0" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Welcome to the Game!" textFill="RED">
               <font>
                  <Font name="Yu Gothic Medium" size="24.0" />
               </font>
            </Label>
            <Button mnemonicParsing="false" onMouseClicked="#hotSwitch" prefHeight="33.0" prefWidth="121.0" text="Press to design" />
         </children>
      </HBox>
   </top>
   <bottom>
      <VBox prefHeight="88.0" prefWidth="1115.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Controls:" textFill="RED">
               <font>
                  <Font name="Yu Gothic Medium" size="18.0" />
               </font>
            </Label>
            <Label text="A,S,D,W to Move" textFill="RED">
               <font>
                  <Font name="Yu Gothic Medium" size="18.0" />
               </font>
            </Label>
            <Label text="1,2,3 to select items in Inventory" textFill="RED">
               <font>
                  <Font name="Yu Gothic Medium" size="18.0" />
               </font>
            </Label>
            <Label text="E to use Item" textFill="RED">
               <font>
                  <Font name="Yu Gothic Medium" size="18.0" />
               </font>
            </Label>
         </children>
      </VBox>
   </bottom>
</BorderPane>
