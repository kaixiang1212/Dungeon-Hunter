<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.RadialGradient?>
<?import javafx.scene.paint.Stop?>
<?import javafx.scene.text.Font?>

<BorderPane style="-fx-background-image: url(&quot;assets\menuassests\metall001-new-tileable.png&quot;);" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <VBox alignment="CENTER" prefHeight="500.0" prefWidth="500.0" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <Label prefHeight="94.0" prefWidth="315.0" text="You Won!">
               <font>
                  <Font name="Avenir Heavy" size="72.0" />
               </font>
               <textFill>
                  <RadialGradient centerX="0.5" centerY="0.5" radius="0.5">
                     <stops>
                        <Stop color="#ff2626" />
                        <Stop color="#830000" offset="1.0" />
                     </stops>
                  </RadialGradient>
               </textFill>
               <effect>
                  <Glow level="0.0" />
               </effect>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </Label>
            <Button fx:id="mainMenuButton" mnemonicParsing="false" onAction="#handleMainMenuButton" prefHeight="35.0" prefWidth="100.0" text="Main Menu" />
            <Button mnemonicParsing="false" onAction="#restartGame" prefHeight="35.0" prefWidth="100.0" text="Restart" />
            <Button fx:id="quitGame" mnemonicParsing="false" onAction="#handleQuitGame" prefHeight="35.0" prefWidth="100.0" text="Quit Game" />
         </children>
      </VBox>
   </center>
</BorderPane>
